<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="325.0" prefWidth="260.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestiondepedidos.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="259.0" prefWidth="218.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Label contentDisplay="CENTER" text="Iniciar sesión">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Usuario">
                  <font>
                     <Font size="14.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="txtUsuario" />
               <Label text="Contraseña">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <PasswordField fx:id="pswdField" />
               <Button fx:id="buttonEntrar" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Entrar" textAlignment="CENTER">
                  <VBox.margin>
                     <Insets left="80.0" top="30.0" />
                  </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
            </children>
         </VBox>
      </VBox>
   </center>
   <bottom>
   
          <Label fx:id="txtInfo" text="info" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
